<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.oliver.finalproject2018.pif_den_patientlist"
    tools:showIn="@layout/activity_pif_den_patientlist">
    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/den_pat"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
        <ImageButton
            android:id="@+id/btn_add_den_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:src="@android:drawable/ic_input_add" />
    </GridLayout>

    <TextView
        android:id="@+id/txt_empty_list_employees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="@string/add_patients"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone" />
  <ScrollView   android:layout_row="1"
                android:layout_column="0">

      <ListView
          android:id="@+id/list_den_patients"
          android:layout_width="270dp"
          android:layout_height="match_parent"
          android:layout_margin="4dp"
          android:divider="@android:drawable/divider_horizontal_bright"
          android:dividerHeight="0.5dp"
          android:listSelector="@android:drawable/list_selector_background" /></ScrollView>

    <ScrollView
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/den_placeholder"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></FrameLayout>
</ScrollView>
    </GridLayout>
